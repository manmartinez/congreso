- content_for :stylesheets do
  = stylesheet_link_tag 'login'
#main.container
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3   
      .panel.panel-default#login        
        .panel-heading
          %h3.panel-title Iniciar Sesi&oacute;n
        .panel-body
          = form_tag authenticate_url, role: 'form' do
            %fieldset
              .form-group
                = email_field_tag :email, @email, :class => 'form-control', placeholder: 'Usuario', autocorrect: "off", autocapitalize: "off"
              .form-group
                = password_field_tag :password, nil, :class => 'form-control', placeholder: 'Contrase&ntilde;a'.html_safe
              .form-actions
                = submit_tag 'Iniciar Sesi&oacute;n'.html_safe, :class => 'btn btn-primary btn-block'          
      - if flash[:alert]
        .alert.alert-danger
          = flash[:alert]
