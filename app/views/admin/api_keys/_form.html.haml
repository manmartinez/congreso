= render 'admin/shared/form_errors', target: @api_key

= form_for [:admin, @api_key], html: {:class => 'form-horizontal', role: 'form'} do |f|
  .form-group
    = f.label :app_name, 'Nombre', :class => 'control-label col-sm-2'
    .col-sm-10
      = f.text_field :app_name, :class => 'form-control', placeholder: 'Nombre'

  .form-actions.text-right
    = f.submit 'Continuar', :class => 'btn btn-success'
    = link_to 'Cancelar', admin_api_keys_url, :class => 'btn btn-default'
  

