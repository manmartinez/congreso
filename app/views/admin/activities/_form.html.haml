= render 'admin/shared/form_errors', target: @activity

= form_for [:admin, @activity], html: {:class => 'form-horizontal', role: 'form'} do |f|
  .form-group
    = f.label :name, 'Nombre', :class => 'control-label col-sm-2'
    .col-sm-10
      = f.text_field :name, :class => 'form-control', placeholder: 'Nombre'
  .form-group
    = f.label :activity_type, 'Tipo de Actividad', :class => 'control-label col-sm-2'
    .col-sm-10
      = f.select :activity_type, activity_type_options, {}, :class => 'form-control'
  .form-group
    = f.label :description, 'Descripci&oacute;n'.html_safe, :class => 'control-label col-sm-2'
    .col-sm-10
      = f.text_area :description, rows: 5, :class => 'form-control'
  .form-group
    = f.label :starts_at, 'Fecha Inicio', :class => 'control-label col-sm-2'
    .col-sm-10
      = f.datetime_select :starts_at, {}, :class => 'form-control'
  .form-group
    = f.label :ends_at, 'Fecha Fin', :class => 'control-label col-sm-2'
    .col-sm-10
      = f.datetime_select :ends_at, {}, :class => 'form-control'
  .form-group
    = f.label :room_id, 'Sal&oacute;n'.html_safe, :class => 'control-label col-sm-2'
    .col-sm-10
      = f.select :room_id, options_from_collection_for_select(@rooms, :id, :name, @activity.room_id), {prompt: 'Seleccione'}, :class => 'form-control'
  .form-group
    = f.label :speaker_id, 'Conferencista'.html_safe, :class => 'control-label col-sm-2'
    .col-sm-10
      = f.select :speaker_id, options_from_collection_for_select(@speakers, :id, :name, @activity.speaker_id), {prompt: 'Seleccione'}, :class => 'form-control'

  .form-actions.text-right
    = f.submit 'Continuar', :class => 'btn btn-success'
    = link_to 'Cancelar', admin_activities_url, :class => 'btn btn-default'
  

